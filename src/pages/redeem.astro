---
import Layout from "@/layouts/Layout.astro";
---
<Layout title="兑换 | Web AI Chat">
  <div class="flex items-center justify-center min-h-screen bg-login">
    <div class="bg-white p-8 rounded shadow-lg w-full max-w-screen-sm">
      <h1 class="text-2xl text-center font-bold mb-8">兑换卡密</h1>
      <form method="POST" action="/api/redeem">
        <div class="mb-4">
          <label for="code" class="block mb-2 font-medium">兑换码</label>
          <input
            type="text"
            id="code"
            name="code"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500"
            placeholder="输入兑换码"
            required
          />
        </div>
        <button
          type="submit"
          class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition-colors duration-300"
          >兑换</button
        >
      </form>
      <p class="text-center text-gray-500 text-sm mt-4">
        <span id="error" class="text-red-500"></span>
        <span id="success" class="text-green-500"></span>
      </p>
      <p class="text-center text-gray-500 text-sm mt-4">
        <div class="flex items-center justify-center">
          <a href="/store" class="hover:text-blue-800 text-blue-500">商店</a>
          <span class="mx-2">·</span>
          <a href="/" class="hover:text-blue-800 text-blue-500">回首页</a>
        </div>
      </p>
    </div>
    <script>
      const error = new URLSearchParams(window.location.search).get("error");
      if (error === "invalid") {
        // @ts-ignore
        document.querySelector("#error").innerText = "无效的兑换码";
      }
      if (error === "used-up") {
        // @ts-ignore
        document.querySelector("#error").innerText = "兑换码已被使用";
      }
      
      const success = new URLSearchParams(window.location.search).get("success");
      if (success === "true") {
        // @ts-ignore
        document.querySelector("#success").innerText = "兑换成功";
      }
    </script>
  </div>
</Layout>
