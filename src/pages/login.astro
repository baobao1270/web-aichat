---
import Layout from "@/layouts/Layout.astro";
---
<Layout title="登录 | Web AI Chat">
  <div class="flex items-center justify-center min-h-screen bg-login">
    <div class="bg-white p-8 rounded shadow-lg w-full max-w-screen-sm">
      <h1 class="text-2xl text-center font-bold mb-8">登录</h1>
      <form method="POST" action="/api/login">
        <div class="mb-4">
          <label for="email" class="block mb-2 font-medium">电子邮箱</label>
          <input
            type="text"
            id="email"
            name="email"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500"
            placeholder="输入您的电子邮箱"
            required
          />
        </div>
        <div class="mb-4">
          <label for="password" class="block mb-2 font-medium">密码</label>
          <input
            type="password"
            id="password"
            name="password"
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-blue-500"
            placeholder="输入您的密码"
            required
          />
        </div>
        <button
          type="submit"
          class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition-colors duration-300"
          >登录</button
        >
      </form>
      <p class="text-center text-gray-500 text-sm mt-4">
        <span id="error" class="text-red-500"></span>
        <span id="success" class="text-green-500"></span>
      </p>
      <p class="text-center text-gray-500 text-sm mt-4">
        <div class="flex items-center justify-center">
          <a href="/reset-password" class="hover:text-blue-800 text-blue-500">忘记密码</a>
          <span class="mx-2">·</span>
          <a href="/" class="hover:text-blue-800 text-blue-500">回首页</a>
        </div>
      </p>
    </div>
    <script>
      const error = new URLSearchParams(window.location.search).get("error");
      if (error === "invalid-email-or-password") {
        // @ts-ignore
        document.querySelector("#error").innerText = "电子邮箱或密码错误";
      }
      const success = new URLSearchParams(window.location.search).get("success");
      if (success === "registered") {
        // @ts-ignore
        document.querySelector("#success").innerText = "注册成功，请登录";
      }
    </script>
  </div>
</Layout>
